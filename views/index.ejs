<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="./css/style.css">
  <title>Wacky Widgets</title>
</head>
<body>
  <h1>Wacky Widgets</h1>
  <% if (widgets.length === 0) { %>
    <h3>No Widgets Exist</h3>
  <% } else { %>
    <% widgets.forEach(function(widget) { %>
    <section> 
      <div>
        <h2> <%= widget.description %> </h2>
        <h2> Quantity: <%= widget.quantity %> </h2>
        <form action="/<%= widget.id %>/?_method=DELETE" method='POST'>
          <input type="submit" value="remove">
        </form>
      </div>
    </section>
    <% }) %>
  <% } %>
<hr />

<h2>Add Widget</h2>
<form action="/" method="POST">
  <input type="text" name="description" placeholder="Widget Description"><br>
  <input type="number" name="quantity" placeholder="Widget Quantity"><br>
  <input type="submit" value="Add Widget!">
</form>
</body>
</html>

